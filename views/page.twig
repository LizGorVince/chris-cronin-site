{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				{# <h1>{{post.title}}</h1> #}
				{# <p class="article-tagline">{{post.tagline}}</p> #}
					<div class="gallery__slider">
						<div class="gallery__slider__slide">
							{% block gallery %}
							  {% for image in TimberImage(post.get_field('gallery')) %}
									<img src="{{ image }}">
							  {% endfor %}

								<div class="hero__arrows">
					      <div class="container">
					        <span class="hero__arrows__prev slick-arrow"><i class="fas fa-chevron-left"></i></span>
					        <span class="hero__arrows__next slick-arrow"><i class="fas fa-chevron-right"></i></span>
					      </div>
					    </div>
							{% endblock %}
						</div>
					</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
