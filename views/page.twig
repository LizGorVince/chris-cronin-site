{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				{# <h1>{{post.title}}</h1> #}
				<p class="article-tagline">{{post.tagline}}</p>
				<div class="article-body">
					{% block home_gallery %}
					  {% for image in TimberImage(post.get_field('home_gallery')) %}
					    <img src="{{ image }}">
					  {% endfor %}
					{% endblock %}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
