{% block html_head %}
	{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">

		<div class="main__plus-nav wrapper">
			<header class="site-header">
				{% block header %}
				<div class="header__logo">
					<a href="{{ site.url }}" alt="{{ site.title }}, {{ site.description }}">
					{{ source('/assets/img/logo/chris-cronin-logo.svg') }}
					</a>
				</div>
				{% endblock %}
				{% include 'partials/nav.twig' %}
				<div id="slide-controls" style="display: block;" class="wrapper">
          <a href="#" class="show-thumbnails">Show Thumbnails</a>
          <a href="#" class="prev">Prev</a> <span class="slidecontline">/</span> <a href="#" class="next">Next</a>
          <p style="margin:10px 0 0 0"><span class="slide-current-count">1</span><span class="slide-punctuation">  /  </span><span class="slide-count">33</span></p>
      	</div>
			</header>

			<main role="main" class="site-main">
					<div class="{{sidebar_class}}">
						{% block content %}
							Sorry, no content
						{% endblock %}
					</div>
				{% if sidebar %}
					<aside class="main-sidebar">
						{{sidebar}}
					</aside>
				{% endif %}
			</main>
		</div>

		<footer class="site-footer">
			{% block footer %}
				<div class="wrapper">
					{% include 'footer.twig' %}
				</div>
			{% endblock %}
		</footer>
		{{ function('wp_footer') }}

	</body>
</html>
